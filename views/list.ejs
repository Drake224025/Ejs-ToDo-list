<%- include("header") -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% for (let index=0; index < newItems.length; index++) {%> <% const
  element=newItems[index];%>
  <div class="item">
    <form action="/delete" method="post">
      <input
        type="checkbox"
        onchange="this.form.submit()"
        name="itemId"
        value="<%= element._id %>"
      />
    </form>
    <p><%= element.name %></p>
  </div>
  <% }%>
  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>
<%- include("footer") -%>
